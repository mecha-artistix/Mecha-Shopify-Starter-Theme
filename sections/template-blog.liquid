<div class="py-8">
    {% paginate blog.articles by section.settings.blogs_per_page %}
        <h1 class="text-center text-3xl">{{ blog.title }}</h1>
        <div class="max-w-6xl py-8 mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                            {% if article.image != blank %}
                                <a href="{{ article.url }}">
                                    <img class="w-full h-80 object-cover object-center" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}">
                                    {% else %}
                                        {{ "image" | placeholder_svg_tag: "w-full h-80 object-cover bg-gray-100 object-center"  }}
                                {% endif %}
                            </a>
                            <div class="p-4">
                                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                                {% if article.excerpt.size > 0 %}
                                    <p>{{ article.excerpt |  strip_html | truncatewords: 15 }}</p>
                                    {% else %}
                                        <p>{{ article.content | strip_html |  truncatewords: 15 }}</p>
                                {% endif %}
                                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4" >{{ section.settings.blog_read_more }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
        </div>

    {% endpaginate %}
    
</div>

{% schema %}
    {
        "name": "Template Blog",
        "settings": [
            {
                "label": "Read More Button",
                "type": "text",
                "id": "blog_read_more",
                "default": "Read More"
            },
            {
                "label": "Blogs Per Page",
                "type": "number",
                "id": "blogs_per_page",

                "default": 3
            }
        ]
    }
{% endschema %}