<div x-data="{loginForm : true, pwRecoverForm : false}" class="h-full container flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div x-show="loginForm" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email_address" >Email Address</label>
                    <input type="email" name="customer[email]" id="email_address" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="Type in your email address">
                </div>
                {% if form.password_needed %}
                    <div class="my-2">
                    <label for="password">Password</label>
                    <input type="password" name="customer[password]" id="password" autocomplete="password" class="relative block w-full px-3 py-2 border" placeholder="Type in your password">
                </div>
                {% endif %}
                <div class="my-2 text-sm">
                    <a x-on:click="pwRecoverForm = true; loginForm = false" href="#" class="underline text-gray-500 hover:text-gray-900">Forgot Password</a>
                </div>
                <div>
                    <button type="submit" class="reltive w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Sign In</button>
                </div>
            {% endform %}
        </div>
    </div>
    <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Recover Customer Password</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email" >Email Address</label>
                    <input type="email" name="email" id="email" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="Type in your email address">
                </div>
                
                <div>
                    <button type="submit" class="reltive w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Recover Password</button>
                </div>
                <div class="my-2 text-sm">
                    <a x-on:click="pwRecoverForm = false; loginForm = true" href="#" class="underline text-gray-500 hover:text-gray-900">Back to login</a>
                </div>
            {% endform %}
        </div>
    </div>

</div>